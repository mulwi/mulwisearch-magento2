<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mulwi" translate="label" type="text" sortOrder="1100" showInDefault="1">
            <label>Search</label>
            <tab>general</tab>
            <resource>Mulwi_Search::config_mulwi</resource>
            <group id="general" translate="label" type="text" showInDefault="1">
                <label>General</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable Search</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="domain" translate="label comment" type="text" sortOrder="15" showInDefault="1">
                    <label>Application domain</label>
                    <comment></comment>
                </field>
                <field id="application_id" translate="label comment" type="text" sortOrder="20" showInDefault="1">
                    <label>Application ID</label>
                    <comment>...</comment>
                </field>
                <field id="application_key" translate="label comment" type="obscure" sortOrder="40" showInDefault="1">
                    <label>API Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment>...</comment>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="50" showInDefault="1" canRestore="1">
                    <label>Search API URL</label>
                </field>
                <field id="app_url" translate="label comment" type="text" sortOrder="60" showInDefault="1"
                       canRestore="1">
                    <label>Search URL</label>
                </field>
            </group>
            <group id="cron" translate="label" type="text" sortOrder="20" showInDefault="1">
                <label>Cron</label>
                <field id="enable_cron" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable Cron</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
